function fit_to_height() {
    var headroom = $('.navbar').outerHeight();
    //var footroom = '20px';
    var divheight = window.innerHeight - headroom;  //+ footroom);
    $('#page, .speaker img, #town_map').css('height', divheight);
}
fit_to_height()

    //var headroom = $('.navbar').outerHeight();
    //var footroom = '20px';
    //var divheight = window.innerHeight - headroom; // + footroom);
    //$('#page').css('height', divheight);
    //$('.speaker img').css('height', divheight);

{{if 'bg_image' in globals():}}
$('#page').css("background-image", "url({{=bg_image}})");
$('#page').css("background-size", "auto 100%");
{{else:}}
